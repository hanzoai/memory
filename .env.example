# Hanzo Memory Service Configuration

# API Settings
HANZO_API_KEY=your-api-key-here
HANZO_DISABLE_AUTH=false

# Server Settings
HANZO_HOST=0.0.0.0
HANZO_PORT=4000

# Database Settings
HANZO_INFINITY_DB_PATH=data/infinity_db

# LLM Settings (LiteLLM compatible)
# For OpenAI
HANZO_LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-key

# For Anthropic
# HANZO_LLM_MODEL=claude-3-haiku-20240307
# ANTHROPIC_API_KEY=your-anthropic-key

# For Local Models (e.g., Ollama)
# HANZO_LLM_MODEL=ollama/llama3.2
# HANZO_LLM_API_BASE=http://localhost:11434

# For Azure OpenAI
# HANZO_LLM_MODEL=azure/gpt-4
# AZURE_API_KEY=your-azure-key
# AZURE_API_BASE=https://your-resource.openai.azure.com
# AZURE_API_VERSION=2024-02-15-preview

# Embedding Settings
HANZO_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
HANZO_EMBEDDING_DIMENSIONS=384

# Memory Settings
HANZO_MAX_MEMORIES_PER_USER=10000
HANZO_MEMORY_RETRIEVAL_LIMIT=50

# Knowledge Base Settings
HANZO_MAX_KNOWLEDGE_BASES_PER_USER=100
HANZO_MAX_FACTS_PER_BASE=100000

# Cache Settings (optional)
# HANZO_REDIS_URL=redis://localhost:6379
HANZO_CACHE_TTL=3600

# Logging
HANZO_LOG_LEVEL=INFO
HANZO_LOG_FORMAT=json