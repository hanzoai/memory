# Database Backend
HANZO_DB_BACKEND=lancedb # or 'memory' for in-memory database
HANZO_LANCEDB_PATH=./data/lancedb

# Embedding Settings
HANZO_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
HANZO_EMBEDDING_DIMENSIONS=384
HANZO_EMBEDDING_PROVIDER=transformers # or 'openai'

# OpenAI Settings (optional)
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Server Settings
HANZO_HOST=0.0.0.0
HANZO_PORT=8000

# Feature Flags
HANZO_STRIP_PII_DEFAULT=false
HANZO_FILTER_WITH_LLM_DEFAULT=false