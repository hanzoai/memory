{
  "name": "@hanzo/memory",
  "version": "0.1.0",
  "description": "AI memory service with LanceDB - TypeScript/JavaScript port",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "typecheck": "tsc --noEmit",
    "server": "tsx src/server.ts",
    "server:dev": "tsx watch src/server.ts"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.4.0",
    "@xenova/transformers": "^2.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.25.0",
    "openai": "^4.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hanzoai/memory-js"
  },
  "keywords": [
    "ai",
    "memory",
    "lancedb",
    "embeddings",
    "vector-database",
    "llm"
  ],
  "author": "Hanzo Industries Inc.",
  "license": "BSD-3-Clause"
}